@model Maintenance.Models.Model

@{
    ViewData["Title"] = "Create";
}
<div class="text-center">
    <h2 style="color:dodgerblue">Model</h2>
</div>

<h4 style="color:brown">Create</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
         <div class="form-group">
                <label asp-for="BarndIDFK" class="control-label"></label>
                <select asp-for="BarndIDFK" class="form-control" asp-items="@(new SelectList( ViewBag.Barnds, "Brand_ID", "Brand_Name"))"></select>
                <span asp-validation-for="BarndIDFK" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Model_Name" class="control-label"></label>
                <input asp-for="Model_Name" class="form-control" />
                <span asp-validation-for="Model_Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
