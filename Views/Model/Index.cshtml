@model IEnumerable<Maintenance.Models.Model>

@{
    ViewData["Title"] = "Index";
}
<div class="text-center">
    <h2 style="color:dodgerblue">Model</h2>
</div>


<p>
    <a asp-action="Create" class="btn btn-primary ">Create New</a>
</p>
<table class="table table-bordered table-hover table-condensed">
    <thead class="table-Primary">

        <tr>
            <th width="10%">
                @Html.DisplayNameFor(model => model.Model_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BarndIDFK)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model_Name)
            </th>
            <th width="5%">
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Model_ID)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.Brands.Brand_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model_Name)
            </td>
                 <td>
                    @Html.ActionLink("Delete", "Delete", new {  id=item.Model_ID  },htmlAttributes:new{@class="btn btn-danger"})
                        </td>
        </tr>
}
    </tbody>
</table>
