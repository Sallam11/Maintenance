@model Maintenance.Models.Item_SubGroup

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h2 style="color:dodgerblue">Item Types</h2>
</div>
<h4 style="color:brown">Create</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ItemGroupIDFK" class="control-label"></label>
                <select asp-for="ItemGroupIDFK" class="form-control" asp-items="@(new SelectList( ViewBag.ItemGroups, "ItemGroup_ID", "ItemGroup_Name"))"></select>
                <span asp-validation-for="ItemGroupIDFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemSubGroup_Name" class="control-label"></label>
                <input asp-for="ItemSubGroup_Name" class="form-control" />
                <span asp-validation-for="ItemSubGroup_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

