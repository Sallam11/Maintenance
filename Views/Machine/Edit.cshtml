            <div class="form-group">
                <label asp-for="SubGroupID_FK" class="control-label"></label>
                <select asp-for="SubGroupID_FK" class="form-control" asp-items="@(new SelectList( ViewBag.Models, "Model_ID", "Model_Name"))"></select>
                <span asp-validation-for="SubGroupID_FK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Machine_Code" class="control-label"></label>
                <input asp-for="Machine_Code" class="form-control" readonly />
                <span asp-validation-for="Machine_Code" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <label asp-for="Machine_ImageURL" class="control-label"></label>
                <input asp-for="Machine_ImageURL" class="form-control" />
                <span asp-validation-for="Machine_ImageURL" class="text-danger"></span>
